@model IEnumerable<IMS.ORDER>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<h2>Order</h2>

<p>
    @Html.ActionLink("Add New Order", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date_Of_Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USER.First_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date_Of_Order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USER.First_Name)
        </td>
        <td>
            @Html.ActionLink("Generate Invoice", "GenerateInvoice", new { orderNo = item.Order_ID }, new { @class = "btn btn-outline-success" }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Order_ID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Order_ID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Order_ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
