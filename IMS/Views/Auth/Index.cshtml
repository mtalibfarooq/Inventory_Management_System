@model IMS.USER

@{
    ViewBag.Title = "Pixel Login | Inventory Manaagement System";
    Layout = "~/Views/Shared/_SigninLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <div class="form-group">
        <div class="form-input">

            @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control col-md-12 col-sm-12 col-lg-12", @placeholder = "User Name" } })
            @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })

        </div>
        <br />
        <div class="form-input">

            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-12 col-sm-12 col-lg-12", @placeholder = "Password" ,type = "password"} })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <br />
        <input type="submit" value="LOG IN" class="btn-lg btn-success  col-md-12 col-lg-12  col-sm-12 mt-2" style="background-color: #00d679;" />


    </div>
</div>
}
