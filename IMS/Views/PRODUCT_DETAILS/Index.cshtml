@model IEnumerable<IMS.PRODUCT_DETAILS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<h2>Prodcuts Details</h2>

<p style="margin-top:20px">
    @Html.ActionLink("Add New Details", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.PRODUCT.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Sold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Avaliable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.Product_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Sold)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Avaliable)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Product_Detail_ID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id = item.Product_Detail_ID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Product_Detail_ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
